###########################################

############# restart input ###############
set runnum [llength [glob -nocomplain ${curSim}\[0-9\]\[0-9\]\[0-9\].dcd]]
if { $runnum < 1 } {
	firsttimestep 0
    cellBasisVector1 100 0 0 
    cellBasisVector2 0 100 0 
    cellBasisVector3 0 0 100
    cellOrigin  0.16  -0.04  0
	temperature $temperature
} else {
	set inputname [format "${curSim}%03d" [expr $runnum-1]]
	set firsttime [get_first_ts ./$inputname.xsc]
	firsttimestep $firsttime
	bincoordinates $inputname.coor
    extendedsystem $inputname.xsc
    binvelocities $inputname.vel
}
###########################################

########### output options ################
outputname              [format "${curSim}%03d" $runnum]
binaryoutput            yes
binaryrestart           yes
outputEnergies          1000
outputTiming            10000
restartfreq             5000
dcdfreq                 500
#wrapALL                 on
#wrapNearest             on
###########################################

########### simulation options ############
# Basic dynamics
dielectric              1.0
# Cutoff switching
switching               on
vdwForceSwitching       on
LJCorrection on
switchdist              10
cutoff                  12
pairlistdist            14
rigidbonds              all
margin 8

# Multiple timestepping

timestep                2


#stepspercycle           400
fullElectFrequency       2
# PME
PME            on
PMEGridSpacing 1.2
###########################################

############# Thermostat ##################
langevin                on
langevinTemp            $temperature
langevinHydrogen        on
langevinDamping         1.0
###########################################

